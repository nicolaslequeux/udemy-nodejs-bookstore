<%- include('../includes/head') %>
</head>

<body>

  <%- include('../includes/navigation') %>

  <main class="centered">
    <h1><%= product.title %></h1>
    
    <hr>
    <div style="max-width: 80vw; margin: 0 auto;">
      <img
        src="/<%= product.imageUrl %>"
        alt="<%= product.title %>"
        width="100%"
        >
    </div>

    <h2>$<%= product.price %></h2>
    <p><%= product.description %></p>

    <% if (isAuthenticated) { %>
      <%- include('../includes/add-to-cart.ejs', { product: product }) %>
    <% } %>

  </main>

  <%- include('../includes/end') %>